# CloudMind Secure Environment Configuration
# Copy this file to .env and set your actual values
# NEVER commit .env to version control

# Application Settings
APP_NAME=CloudMind
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=127.0.0.1
PORT=8000
WORKERS=4

# Security - CRITICAL: Generate strong secrets
SECRET_KEY=your-super-secret-jwt-key-change-this-immediately
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Security
JWT_AUDIENCE=cloudmind-api
JWT_ISSUER=cloudmind-auth
JWT_LEEWAY=10

# Database Configuration - Use strong passwords
DATABASE_URL=postgresql://cloudmind:${DB_PASSWORD}@localhost:5432/cloudmind?sslmode=require
DB_PASSWORD=your-super-secure-database-password

# TimescaleDB Configuration
TIMESCALE_URL=postgresql://cloudmind:${TIMESCALE_PASSWORD}@localhost:5433/cloudmind_metrics?sslmode=require
TIMESCALE_PASSWORD=your-super-secure-timescale-password

# Redis Configuration - Use strong passwords
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0?ssl=true
REDIS_PASSWORD=your-super-secure-redis-password

# Celery Configuration
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0?ssl=true
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@localhost:6379/0?ssl=true

# AI/ML API Keys - Store securely
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:70b
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1024
OPENAI_TEMPERATURE=0.2
ANTHROPIC_MODEL=claude-3-5-sonnet
ANTHROPIC_MAX_TOKENS=1024
ANTHROPIC_TEMPERATURE=0.2
GOOGLE_AI_MODEL=gemini-1.5-pro
GOOGLE_AI_MAX_TOKENS=1024
GOOGLE_AI_TEMPERATURE=0.2
USE_STATIC_PRICE_ENGINE=true

# Monitoring Configuration
PROMETHEUS_URL=https://localhost:9090
GRAFANA_URL=https://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-super-secure-grafana-password

# Email Configuration - Use secure SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true
SMTP_SSL=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://localhost:8000
NEXT_PUBLIC_APP_NAME=CloudMind
NEXT_PUBLIC_APP_VERSION=1.0.0

# CORS Settings - Restrictive in production
ALLOWED_ORIGINS=["https://cloudmind.local"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
ALLOWED_HEADERS=["Authorization", "Content-Type", "Accept", "Origin", "X-Requested-With", "X-API-Key", "X-Request-ID", "X-CSRF-Token"]
EXPOSE_HEADERS=["X-Request-ID", "X-RateLimit-Limit", "X-RateLimit-Remaining", "X-RateLimit-Reset", "X-Total-Count", "X-API-Version"]
CORS_MAX_AGE=86400

# Rate Limiting - Conservative limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=5000
RATE_LIMIT_BURST=10

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=["image/*", "application/pdf", "text/*"]
SCAN_UPLOADS=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-super-secure-backup-encryption-key

# SSL/TLS Configuration
SSL_CERT_FILE=/path/to/your/ssl/certificate.crt
SSL_KEY_FILE=/path/to/your/ssl/private.key
SSL_CA_FILE=/path/to/your/ssl/ca.crt
SSL_VERIFY_MODE=CERT_REQUIRED

# Development Settings - Disabled in production
AUTO_RELOAD=false
HOT_RELOAD=false
DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=false
ENABLE_REPL=false
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://cloudmind:${TEST_DB_PASSWORD}@localhost:5432/cloudmind_test?sslmode=require
TEST_DB_PASSWORD=your-super-secure-test-database-password
TEST_REDIS_URL=redis://:${TEST_REDIS_PASSWORD}@localhost:6379/1?ssl=true
TEST_REDIS_PASSWORD=your-super-secure-test-redis-password

